<div>
  <h1><%= @team.name %> <%= link_to "(@#{@team.owner.twitter_handle})", @team.owner.twitter_url %></h1>
  <p>
    <%= @team.description %>
  </p>
  <p>
    <%= link_to 'Posts', team_posts_path(@team) %>
  </p>
  <h2>Members</h2>
  <ul>

    <li>
      <%= link_to @team.owner.name, user_path(@team.owner) %>(owner)
    </li>
    <% @team.users.each do |member| %>
      <li><%= member.name %></li>
    <% end %>
  </ul>

  <p>
    <% if is_member %>
      <%= link_to "Leave Team :(", leave_team_path(@team), method: :post, class: "button" %>
    <% else %>
      <%= link_to "Join Team!", join_team_path(@team), method: :post, class: "button" %>
    <% end %>
</div>
